<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg"
    android:orientation="vertical"
    tools:context=".Information_Activity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height54"
        android:background="@color/light_blue" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/image_back"
            android:clickable="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/ht_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/img_back"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/category_releasetitle"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize23" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_towap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marging15"
        android:background="@drawable/aswers_mm_listitem"
        android:orientation="vertical"
        android:padding="@dimen/marging10" >

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="2"
                android:text="@string/news_name"
                android:textColor="@color/welcome_textColor"
                android:textSize="17sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="(15/20)" />
        </LinearLayout>

        <TextView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/marging10"
            android:background="@color/divider" />

        <EditText
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/marging5"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入您要发布的内容... ..."
            android:inputType="textNoSuggestions"
            android:maxLines="3"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:text="(0/140)" />
    </LinearLayout>

    <Button
        android:id="@+id/releasecatogery_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/marging15"
        android:layout_marginRight="@dimen/marging15"
        android:background="@color/light_blue"
        android:text="@string/category_releasetitle"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize20"
        android:layout_gravity="center" />

</LinearLayout>