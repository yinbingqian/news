<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/unlogin"
            android:textColor="@color/register_text_color"
            android:textSize="@dimen/textsize20" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="280dp"
            android:layout_height="@dimen/normal_height42"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/unlogin_btn_bg_selector_1"
            android:text="@string/go_login"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize20" />

        <Button
            android:id="@+id/bt_register"
            android:layout_width="280dp"
            android:layout_height="@dimen/normal_height42"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/unlogin_btn_bg_selector_1"
            android:text="@string/go_register"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize20" />
    </LinearLayout>

</ScrollView>